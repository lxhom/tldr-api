/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

h1 {
    text-align: center;
    font-size: 200%;
}

code {
    display: inline-block;
    margin: 0.5rem;
    padding: 0.1rem 0.3rem;
    background: #fff2;
    border-radius: 0.5rem;
}

pre {
    margin: 0.5rem;
    padding: 0.5rem;
    background: #0005;
    border-radius: 0.5rem;
}

code, pre {
    max-width: 100%;
    white-space: pre-wrap;
    word-wrap: break-word;
}
